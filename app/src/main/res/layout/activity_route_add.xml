<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Add_Information.route_add"
        android:layout_marginLeft="6dp"
        >

        <LinearLayout
            android:id="@+id/route-start"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:id="@+id/location"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location_on_black_24dp"
                android:layout_gravity="center"
                />

            <Spinner
                android:id="@+id/location_spinner"
                android:layout_width="268dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/location_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="19dp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/route-start"
            />

        <LinearLayout
            android:id="@+id/datetime"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/route-start"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:id="@+id/datetime_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dateandtime"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Start Date"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="97dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Time"
                android:textSize="20dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/datetime"/>

        <LinearLayout
            android:id="@+id/odometerinput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/datetime"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:id="@+id/startodometer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_format_list_numbered_black_24dp"
                android:layout_gravity="center"
                />
            <EditText
                android:id="@+id/odometer_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Starting Odometer Count"
                android:layout_marginLeft="20dp"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/destination"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/odometerinput"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:id="@+id/destination_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location_on_black_24dp"
                android:layout_gravity="center"
                />

            <Spinner
                android:id="@+id/destination_list"
                android:layout_width="268dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                />

            <ImageView
                android:id="@+id/destination_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/destination"/>

        <LinearLayout
            android:id="@+id/enddatetime"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/destination"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:id="@+id/datetime_icon1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dateandtime"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/enddatetext"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="End Date"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/endtimetext"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:text="Time"
                android:gravity="center_vertical"
                android:textSize="20dp"
                />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/enddatetime"/>
        <LinearLayout
            android:id="@+id/finalodometer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/enddatetime"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:id="@+id/endodometer_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_format_list_numbered_black_24dp"
                android:layout_gravity="center"

                />
            <EditText
                android:id="@+id/finalodometer_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="FInal Odometer Count"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/finalodometer"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:id="@+id/reason_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location_on_black_24dp"
                android:layout_gravity="center"
                />

            <Spinner
                android:id="@+id/reason_list"
                android:layout_width="268dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/reason"/>
        <LinearLayout
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/reason"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:id="@+id/note_icon"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_note_black_24dp"
                android:layout_gravity="center"
                />
            <EditText
                android:id="@+id/notetext"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Add Note"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/notes"
            android:layout_marginTop="20dp"
            >
            <Button
                android:id="@+id/addroute"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add route"
                android:background="@drawable/buttonstyle"
                android:textColor="@color/white"
                />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>