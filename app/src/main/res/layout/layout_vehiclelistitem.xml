<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/vehicleCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/recycleviewbackground"
            >

            <ImageView
                android:id="@+id/vehicleTypeIcon"
                android:layout_width="67dp"
                android:layout_height="58dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/vehiclemodel"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/vehicleTypeIcon"
                android:text="VehilceModel"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/vehicleMenufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacturer"
                android:layout_toRightOf="@id/vehicleTypeIcon"
                android:layout_below="@id/vehiclemodel"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/vehiclePlateNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vehicleMenufacturer"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="5dp"
                android:text="Plate Number"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/vehicleBuyYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plate Number"
                android:layout_below="@id/vehiclePlateNumber"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>