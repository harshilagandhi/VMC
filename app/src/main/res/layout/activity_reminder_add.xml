<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Information.reminder_add"
    android:layout_marginLeft="10dp"
    >

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/expense_spinner_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/expense_spinner_icon"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_attach_money_black_24dp" />

            <Spinner
                android:id="@+id/expense_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/type_expense_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp">

            <ImageView
                android:id="@+id/typeexpense_icon"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/icon_type_expense_reminder" />

            <Spinner
                android:id="@+id/typeexpense_spinner"
                android:layout_width="270dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/add_flaoting_button_1"

                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/option_layout_reminder"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/typeexpense_icon"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints,NotSibling"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="92dp">

            <ImageView
                android:id="@+id/reminder_option_icon"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_notifications_black_24dp" />

            <Spinner
                android:id="@+id/option_reminder_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/text_remember"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/option_layout_reminder"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/ReminderText"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:text="Reminder By Milage Or Date"
                android:textAlignment="center" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="251dp">

            <EditText
                android:id="@+id/editTextOdometer"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:hint="Odometer(Km)"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="date for reminder"
                android:inputType="date" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/editNotes"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reminder_option_icon1"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_note_black_24dp" />


            <EditText
                android:id="@+id/notesReminder"
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:hint="Add Note"
                android:textAlignment="center"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editNotes"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/addreminderid"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="130dp"
                android:background="@drawable/buttonstyle"
                android:text="Add Reminder"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
</ScrollView>