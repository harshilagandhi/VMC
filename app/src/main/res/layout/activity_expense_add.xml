<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Information.expense_add"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    >
    <LinearLayout
        android:id="@+id/dateandtime"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/datetimeicon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dateandtime"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/datetext"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:hint="Select Date"
            android:layout_marginLeft="40dp"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/timetext"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:hint="Select Time"
            android:gravity=""
            android:textSize="18dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/odometer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/dateandtime"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/odometerIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_sort_black_24dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/odometertext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Odometer"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/expense"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/odometer"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/expenseIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icons8_cost_expense"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/expensetext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Expense Value"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/value"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/expense"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/valueicon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_rupee"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            />
        <Spinner
            android:id="@+id/expensespinner"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            />
        <ImageView
            android:id="@+id/addCategory"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/circularplus"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/value"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_gravity="center"
            />

        <Spinner
            android:id="@+id/locationspinner"
            android:layout_width="262dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            />

        <ImageView
            android:id="@+id/addlocation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/circularplus"
            android:layout_marginLeft="30dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:id="@+id/reasontype"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/incometype"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/reasonicon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            />

        <Spinner
            android:id="@+id/reasonspinner"
            android:layout_width="262dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            />

        <ImageView
            android:id="@+id/reasonadd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/circularplus"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:id="@+id/addnote"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_below="@id/dateandtime"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/noteIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_sort_black_24dp"
            android:layout_gravity="center"

            />

        <EditText
            android:id="@+id/notetext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Notes"
            android:textAlignment="textStart"
            android:layout_marginLeft="40dp"
            android:layout_gravity=""
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addbutton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/addnote"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:background="@drawable/buttonstyle"
            android:text="Add Expense"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>
</ScrollView>