<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Information.add_vehicle"
    android:layout_marginLeft="10dp"
    >

    <LinearLayout
        android:id="@+id/addvehicletype"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/addvehicletype_icon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_directions_car_black_24dp"
            />

        <Spinner
            android:id="@+id/vehicletypespinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:background="@android:color/darker_gray" />


    <LinearLayout
        android:id="@+id/vehiclename"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/addvehicletype"
        android:layout_marginLeft="50dp"
        >

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Vehicle name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/manufacturedetail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/vehiclename"
        >
        <ImageView
            android:id="@+id/manufacture_icon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            />

        <Spinner
            android:id="@+id/manufacturespinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/vehicle_model"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/manufacturedetail"
        android:layout_marginLeft="50dp"
        >

        <EditText
            android:id="@+id/vehiclemodel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Model"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vehicledetails"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/vehicle_model"
        android:layout_marginLeft="50dp"
        >

        <EditText
            android:id="@+id/vehicle_plate"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Licence Plate"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/vehicle_year"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:ems="10"
            android:hint="Year"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vehiclefueldetails"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/vehicledetails"
        >
        <ImageView
            android:id="@+id/fuel_icon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_format_list_numbered_black_24dp"

            />

        <Spinner
            android:id="@+id/fueloption"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:hint="Fuel(Capacity)"
            android:inputType="textPersonName" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/vehiclefueldetails"
        >
        <ImageView
            android:id="@+id/options_icon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_filter_list_black_24dp"
            />

        <Spinner
            android:id="@+id/optionspinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vehicle_chassis"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/options"
        android:layout_marginLeft="50dp"
        >

        <EditText
            android:id="@+id/vehiclechassis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Vehicle Chassis Number"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vehicle_identification"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/vehicle_chassis"
        android:layout_marginLeft="50dp"
        >

        <EditText
            android:id="@+id/identidication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Identification Number"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_below="@+id/vehicle_identification"
        >

        <Button
            android:id="@+id/addvehicle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Add Vehicle"
            android:background="@drawable/buttonstyle"
            android:textColor="@color/white"
            android:layout_marginLeft="150dp"
            />
    </LinearLayout>

</RelativeLayout>
</ScrollView>